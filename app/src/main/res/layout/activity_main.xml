<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example.roadsafety.MainActivity">

    <Button
        android:id="@+id/button"
        android:textAppearance="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/speak"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.535" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textCapSentences"
        android:textAppearance="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:textSize="20sp"
        android:text=""
        android:textColor="@color/grey"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.401" />

    <TextView
        android:id="@+id/textView"
        android:textAppearance="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:layout_width="354dp"
        android:layout_height="179dp"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/grey"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/editText"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.951"
        tools:layout_editor_absoluteY="373dp" />

    <RadioGroup
        android:layout_width="291dp"
        android:layout_height="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/grey"

        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="71dp">

        <RadioButton
            android:id="@+id/readsms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:buttonTint="@color/white"


            android:checked="true"
            android:textSize="20sp"
            android:text="@string/read_sms"/>

        <RadioButton
            android:id="@+id/converttts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:buttonTint="@color/white"


            android:text="@string/convert_text_to_speech"
            android:textSize="20sp" />


    </RadioGroup>

</android.support.constraint.ConstraintLayout>
